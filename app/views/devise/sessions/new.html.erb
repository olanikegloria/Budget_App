<div class='log-in'>
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'register') do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email" %>
      <br />
      <br />
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'button-primary' %>
      <br />
      <br />
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
